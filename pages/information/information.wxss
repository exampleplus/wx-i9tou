.information_b {
  display: flex;
  margin-bottom: 10rpx;
  background: #fff;
}

.information_head {
  z-index: 999;
  position: fixed;
  top: 0;
  background: #fff;
  width: 100%;
  height: 70rpx;
  border-bottom: 1px solid #dadada;
  border-top: 1px solid #dadada;
}

.information_image {
  width: 340rpx;
  height: 180rpx;
}

.information_image image {
  width: 310rpx;
  height: 150rpx;
  padding: 15rpx;
}

/*导航栏样式*/

.radio-group {
  color: #666;
  border-top: 1rpx solid #f3f3f3;
 
  display: flex;
  background: #fff;
  height: 70rpx;
}

.label_item {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}

.checked {
  color: #f74a3d;
  border-bottom: 1rpx solid #f74a3d;
}

.radio {
  position: absolute;
  left: -999em;
}

.information_title {
  margin-left: 10rpx;
  font: 32rpx;
  color: #333;
  font-size: 16px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.information_text {
  font: 15rpx;
  margin-top: 40rpx;
  border-bottom: 1rpx solid #f3f3f3;
  padding-bottom: 20rpx;
  margin-left: 10rpx;
  color: #999;
  font-size: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.information_time {
  float: right;
  color: #999;
  font-size: 22rpx;
}

.data {
  float: right;
  margin-top: 15rpx;
  width: 380rpx;
}

.information_body {
  height: 200rpx;
  margin-top: 88rpx;
}
